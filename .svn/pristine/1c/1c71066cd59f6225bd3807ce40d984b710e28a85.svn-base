/**
 *获取当前时间 
 */
function getCurrentDate() {
	var date = new Date();
    var month = date.getMonth() + 1;
    var strDate = date.getDate();
   	//拼时间
    var currentdate = date.getFullYear() + "年" + addZero(month) + "月" 
    return currentdate;
}
/**
 * 时间为单位数时,前面加0
 */
function addZero(time){
	if(parseInt(time) < 10){  
        time = '0'+time;  
     }  
     return time;
}



