body,button{
	font-family: "Microsoft JhengHei";
}
.content{
	width: 100%;
	height: auto;
}
.bg{
	width:100%;
	height: auto;
	position: relative;
	display: block;
}
.logo{
	display:flex;
	position: absolute;
	margin-left: auto;
	margin-right: auto;
	width:100%;
	justify-content:center;
	flex-direction:column;
	align-items:center;
	top:1rem;
}
.logo_img{
	width: 2rem;
	height:2rem;
	margin: 0px;
}
.logo_title{
	color: #FFFFFF;
	font-size:0.45rem;
}
.login_text{
	position: absolute;
	transform: translate(-50%,-30%);
	left: 50%;
	width: 90%;
}
.login_text_content{
	padding:0.4rem;
	background-color: #FFFFFF;
	border-radius: 5px 5px 0 0;
}
.user_name{
	background: url(../../img/user.png) no-repeat;
    background-size: auto 100%;
}
.lock{
	background: url(../../img/pwd.png) no-repeat;
    background-size: auto 100%;
    
}
.user_name, .lock {
    display: inline-block;
    width: 6px;
    height: 12px;
    margin-top: 12px;
    margin-left: 8px;
    position: absolute;
    left: 0;
    top: 0;
    padding: 7px 10px;
    z-index: 5;
    font-weight: bold;
}
.user_message{
	padding-left:35px;
	color:#040404;
}
.um-input-group{
	  margin-top: 0.3rem
}
.form-control{
	background-color: #f6f3f3;
	font-size: 0.3rem;
}
.um-icon-checkbox{
    border-radius: 10%;
    color:#eb1111;
}
.check_text{
	color:#959a9c;
	font-size: 0.3rem;
}
.um-check-inline{
	margin-top: 10px;
	margin-left: 10px;
}
.btn_login{
	width: 100%;
	background-color: #cc3535;
	color:#FFFFFF;
	height:0.8rem;
	border: none;
	font-size:0.35rem;
	border-radius: 0 0 5px 5px;
}
.pass {
	position:absolute;
	right:5px;
	background:url(../../img/pwd_none.png) no-repeat;
	background-size:100%;
	background-position: 0px 7px;
	width: 21px;
    height: 100%;
}
.pass.show-pass {
	position:absolute;
	right:5px;
	background:url(../../img/pwd_show.png) no-repeat;
	background-size:100%;
	background-position: 0px 7px;
	width: 21px;
    height: 100%;
}