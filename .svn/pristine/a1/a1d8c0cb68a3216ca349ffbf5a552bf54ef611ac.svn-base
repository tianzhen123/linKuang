
/* 链接 默认设置 */
a {
    color: #000;
    text-decoration: none;
    cursor: pointer;
}

/*单行 超出变成..*/
.single{
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}

.name{
	border-radius:25px;
	color:#FFFFFF;
	width: 50px;
	height: 50px;
	background-color: #FF0000;
}

.my-form-control {
    -webkit-appearance: none;
    appearance: none;
    box-sizing: border-box;
    border: groove;
    background: #e7e7e7;
    border-radius: 0;
    box-shadow: none;
    display: block;
    padding: 10px 17%;
    margin: 10px 10%;
    width: 300px;
    font-family: inherit;
    font-size: xx-large;
    color: #000;
    height: 100px;
    outline: none;
}




