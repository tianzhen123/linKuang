/* 链接 默认设置 */
a {
    color: #000;
    text-decoration: none;
    cursor: pointer;
}

/* 困难描述 */
.um-list textarea.form-control {
    height: 70px;
}

/* 困难描述 边框 */
.um-list .i-form-control {
    border: groove;
}

/* 底部按键 */
.btn, .btn-bg, .um-btn {
    position: relative;
    display: block;
    width: 100%;
    font-family: inherit;
    font-weight: normal;
    text-align: center;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    color: #000;
    background-color: #ffffff;
    background-image: none;
    border: 1px solid #000;
    -webkit-user-select: none;
    padding: 4px 10px;
    font-size: 17px;
    line-height: 1.5;
    border-radius: 5px;
}
.btn-red{
    position: relative;
    display: block;
    width: 100%;
    font-family: inherit;
    font-weight: normal;
    text-align: center;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    color: #fff;
    background-color: #FF0000;
    background-image: none;
    border: 1px solid #FF0000;
    -webkit-user-select: none;
    padding: 4px 10px;
    font-size: 17px;
    line-height: 1.5;
    border-radius: 5px;
}
.btn-inline {
    display: inline-block;
    width: 150px;
}

/* 底部样式 */
.um-footer {
    min-height: 44px;
    z-index: 9;
    text-align: center;
    background-color: #fff;
    border-top: 1px solid #eeeeee;
}
