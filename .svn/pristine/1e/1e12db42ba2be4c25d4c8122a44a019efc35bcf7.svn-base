.um-header{
	position:relative;
	background-color: #d72424;
	display: flex;
  	justify-content: center;
  	align-items: center;
  	height: 64px;
  	padding-top: 20px;
}
.um-back{
  position: absolute;
  top:inherit;
  left: 10px;
  font-weight: 500;
  color: #ffffff;
  line-height: 44px;
  text-decoration: none;
}
body,button{
	font-family: "Microsoft JhengHei";
}
.um-header h3{
	color: #FFFFFF;
	font-weight:normal;
}

.um-back, .um-header-right, .um-header-left {
   font-size: 14px;
   color:#FFFFFF;
}

.um-back:before {
    content: "";
    display: inline-block;
    width: 10px;
    height: 10px;
    border-left: 2px solid #FFFFFF;
    border-bottom: 2px solid #FFFFFF;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
    margin: 0px -3px 0px 0px;
}
body{
	background:#FFFFFF;
}
