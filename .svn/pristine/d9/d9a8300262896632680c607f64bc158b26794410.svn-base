.list-content{
	display: flex;
	flex-direction:row;
	max-height: 120px;
	overflow:hidden;
	padding:10px;
}
.um-content {
    position: relative;
}
.mescroll{
		position: absolute;
		top: 0;
		bottom: 0;
		height: auto;/*如设置bottom:51px,则需height:auto才能生效*/
}

.content-left .image{
	float:left;
	padding-right: 10px;
	max-width:120px;
	height:100%;
}
.content-right{
	flex:6;
	display:flex;
	flex-direction:column;
}
.item-list-li{
	width:25%;
	text-align: center;
}
.item-list-li img{
	width:60px;
	margin: auto;
	
}
.item-list-li span{
	margin:auto;
}
.item-list-ul{
	display:flex;
	flex-wrap:wrap;
	margin:10px 0;
}
.li-name{
	text-align:center;
	margin: 2px;
}
.item-list-ul .item-list-li:first-child .li-name{
	margin:2px 8px;
}
.desc{
	flex:1;
	padding:0 0 10px 0;
	
}
.desc-p{
	overflow:hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	word-wrap: break-word;
    white-space: normal !important;
	height:auto;
}
.mg{
	width:100%;
	height:5px;
	background:rgba(242, 242, 242, 1);
}
.um-list .um-list-item-body {
  -webkit-box-flex: 1;
  box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  padding: 0px 0;
  -webkit-align-self: stretch;
  align-self: stretch;
  width: 0;
}
.item-list{
	margin: 10px 0;
}
.line{
	background-color: #c2c2c2;
	height:1px;
}