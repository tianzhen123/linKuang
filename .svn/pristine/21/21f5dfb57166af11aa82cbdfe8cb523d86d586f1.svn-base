.addBtn{
	position: absolute;
	right: 10px;
	color: #fff;
	font-size: 14px;
	top:inherit;
	font-weight:500;
	line-height: 44px;
}
.um-list .um-list-item-body {
    padding: 10px 10px;
   }

.um-input-group{
	margin:5px;
}
.um-list-item-body{
	display:flex;
	flex-direction:column;
}
.desc{
	flex:1;
	max-height:60px;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 3;
	width:249px;
	line-height:1.3
}
.desc span{
	display:inline-block;
	overflow:hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	width:249px;
}
.desc .desc-m{
	font-size:12px;
	font-weight:100;
}
.msg-info{
	max-width:40%;
	margin: 0;
}
.image{
	float:left;
	padding-right: 10px;
	max-height:95px;
	max-width:120px
}

.list-content{
	display: flex;
	flex-direction:row;
	padding: 10px 10px 10px 10px;
	max-height: 120px;
	width: 100%;
}
.content-left{
	
}
.content-right{
	flex:6;
	max-height:120px;
	display:flex;
	flex-direction:column;
}
#dataList li{
	background:#fff
}
#dataList li .content-right .line{
	width:100%;
	background-color: rgba(242, 242, 242, 1);
	margin-bottom:4px;
}
.time{
	color:#CBCBCB;
	font-size:12px
}
.time span{
	float:right
}
.line{
	background-color: #c2c2c2;
	height:1px;
}
#classify{
	display:none;
	background:#fff
}
.um-border-bottom {
	border-style: solid;
	border-width: 0px 0 1px;
}