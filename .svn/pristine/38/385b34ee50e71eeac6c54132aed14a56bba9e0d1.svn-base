			document.getElementById("submit").innerHTML=msg;
			
			var jsfun = 'searchClick();';
			summer.execScript({
				winId : 'signupAndPropaganda',
				script : jsfun
			});
			
		} else {
			//$summer.alert("网络错误");
		}
	}, function(response) {//失败回调
		//$summer.alert("网络错误");
	});
	
}
